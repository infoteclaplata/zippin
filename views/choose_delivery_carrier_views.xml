<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="choose_delivery_carrier_view_form" model="ir.ui.view">
        <field name="name">choose.delivery.carrier.zippin.form</field>
        <field name="model">choose.delivery.carrier</field>
        <field name="inherit_id" ref="delivery.choose_delivery_carrier_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='carrier_id']" position="after">
                <field name="zippin_pickup_view" invisible="1"/>
                <field name="zippin_pickup" attrs="{'invisible':[('zippin_pickup_view', '!=', True)]}"/>
            </xpath>
        </field>
    </record>
    <record id="zippin_odoo_view_form" model="ir.ui.view">
        <field name="name">zippin.odoo.view.form</field>
        <field name="model">zippin.odoo</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="carrier_id"/>
                        <field name="point_id"/>
                        <field name="name" />
                        <field name="address" />
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>