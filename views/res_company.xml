<odoo>
    <data>

        <record model="ir.ui.view" id="view_company_page_zippin">
            <field name="name">res.company.form.zippin</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <data>
                    <notebook>
                        <page string="Zippin">
                            <group>
                                <field name="zippin_id" />
                                <field name="zippin_key" />
                                <field name="zippin_secret" />
                            </group>
                        </page>
                    </notebook>
                </data>
            </field>
        </record>

    </data>
</odoo>