<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_delivery" name="Delivery Costs" inherit_id="website_sale.payment">
        <xpath expr="//div[@id='delivery_method']" position="inside">
                <p><h3 class="mb24">Sucursales disponibles</h3></p>
                <select class="form-control" name="zippin_pickup">
                     <t t-foreach="zippin_pickup" t-as="pickup">
                          <option t-attf-value="pickup.point_id"><t t-esc="pickup.name"/></option>
                     </t>
                 </select>
        </xpath>
    </template>
</odoo>