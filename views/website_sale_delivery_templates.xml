<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payment_delivery_pickup" name="Delivery Pickups" inherit_id="website_sale.payment">
        <xpath expr="//t[@t-foreach='deliveries']" position="inside">
            <xpath expr="//t[@t-foreach='deliveries']" position="after">
                <t t-if="delivery.zippin_shipment_type == '233' and delivery.zippin_shipment_type_is_pickup">
                    <select class="zippin_car_suc" name="zippin_car_suc" id="zippin_car_suc">
                        <option>Seleccione:</option>
                        <t t-foreach="zippin_car_suc" t-as="pickup">
                              <option t-att-value="'{carrier_id:'+pickup.carrier_id+',point_id:'+pickup.point_id+',name:'+pickup.name+',address:'+pickup.address+'}'"><t t-esc="pickup.name"/></option>
                        </t>
                    </select>
                    <p></p>
                </t>
                <t t-if="delivery.zippin_shipment_type == '208' and delivery.zippin_shipment_type_is_pickup">
                    <select class="zippin_oca_suc" name="zippin_oca_suc" id="zippin_oca_suc">
                        <option>Seleccione:</option>
                        <t t-foreach="zippin_oca_suc" t-as="pickup">
                              <option t-att-value="'{carrier_id:'+pickup.carrier_id+',point_id:'+pickup.point_id+',name:'+pickup.name+',address:'+pickup.address+'}'"><t t-esc="pickup.name"/></option>
                        </t>
                    </select>
                    <p></p>
                </t>
                <t t-if="delivery.zippin_shipment_type == '1' and delivery.zippin_shipment_type_is_pickup">
                    <select class="zippin_and_suc" name="zippin_and_suc" id="zippin_and_suc">
                        <option>Seleccione:</option>
                        <t t-foreach="zippin_and_suc" t-as="pickup">
                                <option t-att-value="'{carrier_id:'+pickup.carrier_id+',point_id:'+pickup.point_id+',name:'+pickup.name+',address:'+pickup.address+'}'"><t t-esc="pickup.name"/></option>
                        </t>
                    </select>
                    <p></p>
                </t>
            </xpath>
        </xpath>
    </template>
</odoo>